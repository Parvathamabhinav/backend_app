<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">

<script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
<script src="https://unpkg.com/lucide@latest"></script>

<title>Scotch â€¢ Register</title>

<!-- Body font -->
<link href="https://api.fontshare.com/v2/css?f[]=satoshi@300,400,500,700,900&display=swap" rel="stylesheet">

<!-- Display font (beautiful letters) -->
<link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@500;600;700&display=swap" rel="stylesheet">

<style>
  @keyframes growHeight {
    from {
      max-height: 60px;
      opacity: 0;
    }
    to {
      max-height: 720px;
      opacity: 1;
    }
  }

  body {
    font-family: 'Satoshi', sans-serif;
  }

  .brand-font {
    font-family: 'Playfair Display', serif;
  }
</style>
</head>

<body class="min-h-screen flex items-center justify-center
             bg-gradient-to-br from-black via-zinc-900 to-black text-white">

<!-- CARD -->
<div
  class="relative w-[390px]
         bg-white/5 backdrop-blur-2xl
         border border-white/10
         rounded-3xl
         overflow-hidden
         animate-[growHeight_3.5s_linear_forwards]
         shadow-[0_0_60px_rgba(59,130,246,0.25)]
         select-none">

  <!-- Glow -->
  <div class="absolute -inset-2 rounded-3xl
              bg-gradient-to-r from-blue-500/30 via-purple-500/20 to-blue-500/30
              blur-3xl opacity-50 -z-10"></div>

  <!-- INNER CONTENT -->
  <div class="p-8">

    <!-- BEAUTIFUL BRAND TEXT -->
    <h1 class="brand-font text-5xl text-center mb-8
               font-semibold tracking-[-0.04em]
               bg-gradient-to-r from-blue-400 via-purple-400 to-pink-400
               bg-clip-text text-transparent
               drop-shadow-[0_10px_30px_rgba(147,51,234,0.35)]">
      Scotch
    </h1>

    <form action="/register" method="post" class="space-y-6">

  <!-- Username -->
  <div class="relative">
    <i data-lucide="user"
       class="absolute left-4 top-1/2 -translate-y-1/2 text-zinc-400"></i>

    <input
      name="name"
      required
      placeholder=" "
      class="peer w-full pl-12 pr-4 py-4 rounded-xl
             bg-black/30 border border-white/10
             outline-none text-sm tracking-wide"/>

    <label
      class="absolute left-12 top-4 text-sm text-zinc-400
             transition-all
             peer-focus:-top-2 peer-focus:text-xs peer-focus:text-blue-400
             peer-not-placeholder-shown:-top-2
             peer-not-placeholder-shown:text-xs
             peer-not-placeholder-shown:text-blue-400">
      Username
    </label>
  </div>

  <!-- Email -->
  <div class="relative">
    <i data-lucide="mail"
       class="absolute left-4 top-1/2 -translate-y-1/2 text-zinc-400"></i>

    <input
      type="email"
      name="email"
      required
      placeholder=" "
      class="peer w-full pl-12 pr-4 py-4 rounded-xl
             bg-black/30 border border-white/10
             outline-none text-sm tracking-wide"/>

    <label
      class="absolute left-12 top-4 text-sm text-zinc-400
             transition-all
             peer-focus:-top-2 peer-focus:text-xs peer-focus:text-blue-400
             peer-not-placeholder-shown:-top-2
             peer-not-placeholder-shown:text-xs
             peer-not-placeholder-shown:text-blue-400">
      Email
    </label>
  </div>

  <!-- Password -->
  <div class="relative">
    <i data-lucide="lock"
       class="absolute left-4 top-1/2 -translate-y-1/2 text-zinc-400"></i>

    <input
      type="password"
      name="password"
      required
      placeholder=" "
      class="peer w-full pl-12 pr-4 py-4 rounded-xl
             bg-black/30 border border-white/10
             outline-none text-sm tracking-wide"/>

    <label
      class="absolute left-12 top-4 text-sm text-zinc-400
             transition-all
             peer-focus:-top-2 peer-focus:text-xs peer-focus:text-blue-400
             peer-not-placeholder-shown:-top-2
             peer-not-placeholder-shown:text-xs
             peer-not-placeholder-shown:text-blue-400">
      Password
    </label>
  </div>

  <button
    type="submit"
    class="w-full py-4 rounded-xl font-semibold tracking-wide
           bg-gradient-to-r from-blue-500 to-purple-500">
    Create Account
  </button>

</form>


    <p class="mt-6 text-center text-sm text-zinc-400 tracking-wide">
      Already have an account?
      <a href="/login" class="text-blue-400 hover:text-blue-300 transition">
        Login here
      </a>
    </p>

  </div>
</div>

<script>
  lucide.createIcons();
</script>

</body>
</html>
