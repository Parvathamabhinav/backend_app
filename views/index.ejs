<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">

<link rel="icon" type="image/png" href="/icon.png">
<script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
<script src="https://unpkg.com/lucide@latest"></script>

<!-- Fonts -->
<link href="https://api.fontshare.com/v2/css?f[]=satoshi@300,400,500,700,900&display=swap" rel="stylesheet">
<link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@500;600;700&display=swap" rel="stylesheet">

<title>Our Project</title>

<style>
  body { font-family: 'Satoshi', sans-serif; }
  .display-font { font-family: 'Playfair Display', serif; }

  @keyframes fadeUp {
    from { opacity: 0; transform: translateY(20px); }
    to { opacity: 1; transform: translateY(0); }
  }
</style>
</head>

<body class="min-h-screen flex items-center justify-center
             bg-gradient-to-br from-black via-zinc-900 to-black text-white">

<!-- LOGOUT BUTTON -->
<a href="/logout"
   class="fixed top-6 right-6 z-50
          px-5 py-2 rounded-xl
          text-sm font-medium
          bg-red-500/10 text-red-400
          backdrop-blur-md border border-red-500/20
          hover:bg-red-500/20
          transition">
  Logout
</a>

<div class="w-full flex flex-col items-center justify-center">

  <!-- Title -->
  <h1
    class="display-font text-6xl text-center mb-8
           tracking-[-0.04em]
           bg-gradient-to-r from-blue-400 via-purple-400 to-pink-400
           bg-clip-text text-transparent
           drop-shadow-[0_10px_30px_rgba(147,51,234,0.35)]
           animate-[fadeUp_1.2s_ease-out]"
  >
    Welcome to Our Project
  </h1>

  <!-- MESSAGE BLOCK -->
  <% if (error || success) { %>
    <div
      class="mb-10 px-6 py-4 rounded-xl text-center text-sm font-medium
             border backdrop-blur-md
             animate-[fadeUp_0.6s_ease-out]
             <%= error
               ? 'bg-red-500/10 text-red-400 border-red-500/30'
               : 'bg-green-500/10 text-green-400 border-green-500/30'
             %>">
      <%= error || success %>
    </div>
  <% } %>

  <!-- Form -->
  <form
    action="/create"
    method="post"
    class="flex flex-col gap-5 w-96
           animate-[fadeUp_1.4s_ease-out]"
  >

    <!-- Name -->
    <div class="relative group">
      <i data-lucide="user"
         class="absolute left-4 top-1/2 -translate-y-1/2
                text-zinc-400 group-focus-within:text-blue-400 transition"></i>

      <input
        class="w-full pl-12 pr-4 py-4 rounded-xl
               bg-black/30 border border-white/10
               text-sm tracking-wide
               placeholder:text-zinc-500
               outline-none focus:border-blue-500 transition"
        type="text"
        name="name"
        placeholder="Enter name"
        required
      >
    </div>

    <!-- Occupation -->
    <div class="relative group">
      <i data-lucide="briefcase"
         class="absolute left-4 top-1/2 -translate-y-1/2
                text-zinc-400 group-focus-within:text-blue-400 transition"></i>

      <input
        class="w-full pl-12 pr-4 py-4 rounded-xl
               bg-black/30 border border-white/10
               text-sm tracking-wide
               placeholder:text-zinc-500
               outline-none focus:border-blue-500 transition"
        type="text"
        name="occupation"
        placeholder="Enter occupation"
        required
      >
    </div>

    <!-- Image URL -->
    <div class="relative group">
      <i data-lucide="image"
         class="absolute left-4 top-1/2 -translate-y-1/2
                text-zinc-400 group-focus-within:text-blue-400 transition"></i>

      <input
        class="w-full pl-12 pr-4 py-4 rounded-xl
               bg-black/30 border border-white/10
               text-sm tracking-wide
               placeholder:text-zinc-500
               outline-none focus:border-blue-500 transition"
        type="text"
        name="image"
        placeholder="Image URL"
        required
      >
    </div>

    <!-- Button -->
    <button
      class="mt-6 px-8 py-4 rounded-xl self-center
             font-semibold tracking-wide
             bg-gradient-to-r from-blue-500 to-purple-500
             shadow-[0_10px_30px_rgba(99,102,241,0.45)]
             hover:scale-[1.04]
             active:scale-95
             transition-all duration-300"
    >
      Create
    </button>

  </form>

  <!-- View All -->
  <a href="/read"
     class="group relative inline-flex items-center justify-center
            mt-12 px-8 py-4 rounded-xl
            font-semibold tracking-wide
            text-white overflow-hidden">

    <span class="absolute inset-0 bg-gradient-to-r
                 from-blue-500 via-purple-500 to-pink-500
                 transition-all duration-500
                 group-hover:scale-110"></span>

    <span class="absolute inset-0 blur-xl opacity-40
                 bg-gradient-to-r from-blue-500 via-purple-500 to-pink-500
                 group-hover:opacity-70 transition"></span>

    <span class="relative flex items-center gap-2 z-10">
      View All People
    </span>

  </a>

</div>

<script>
  lucide.createIcons();
</script>

</body>
</html>
