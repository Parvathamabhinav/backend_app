<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <link rel="icon" type="image/png" href="/icon.png">
  <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
  <script src="https://unpkg.com/lucide@latest"></script>

  <!-- Font -->
  <link href="https://api.fontshare.com/v2/css?f[]=satoshi@300,400,500,700,900&display=swap" rel="stylesheet">

  <title>Edit User</title>

  <style>
    body {
      font-family: 'Satoshi', sans-serif;
    }

    @keyframes fadeUp {
      from { opacity: 0; transform: translateY(20px); }
      to   { opacity: 1; transform: translateY(0); }
    }
  </style>
</head>

<body class="min-h-screen flex items-center justify-center
             bg-gradient-to-br from-black via-zinc-900 to-black text-white">

  <!-- Card -->
  <div class="w-full max-w-xl
              bg-white/5 backdrop-blur-xl
              border border-white/10
              rounded-3xl p-10
              shadow-[0_20px_60px_rgba(0,0,0,0.7)]
              animate-[fadeUp_0.8s_ease-out]">

    <!-- Title -->
    <h1 class="text-3xl font-semibold tracking-tight mb-8 text-center">
      Update Profile
    </h1>

    <!-- Form -->
    <form action="/edit" method="post" class="space-y-6">

      <!-- Username -->
      <div class="relative group">
        <i data-lucide="user"
           class="absolute left-4 top-1/2 -translate-y-1/2
                  text-zinc-400 group-focus-within:text-yellow-400 transition"></i>

        <input
          type="text"
          name="name"
          placeholder="Enter username"
          class="w-full pl-12 pr-4 py-4 rounded-xl
                 bg-black/30 border border-white/10
                 outline-none focus:border-yellow-400
                 text-sm tracking-wide
                 placeholder:text-zinc-500 transition"
        >
      </div>

      <!-- Occupation -->
      <div class="relative group">
        <i data-lucide="briefcase"
           class="absolute left-4 top-1/2 -translate-y-1/2
                  text-zinc-400 group-focus-within:text-yellow-400 transition"></i>

        <input
          type="text"
          name="occupation"
          placeholder="Enter occupation"
          class="w-full pl-12 pr-4 py-4 rounded-xl
                 bg-black/30 border border-white/10
                 outline-none focus:border-yellow-400
                 text-sm tracking-wide
                 placeholder:text-zinc-500 transition"
        >
      </div>

      <!-- Image URL -->
      <div class="relative group">
        <i data-lucide="image"
           class="absolute left-4 top-1/2 -translate-y-1/2
                  text-zinc-400 group-focus-within:text-yellow-400 transition"></i>

        <input
          type="text"
          name="image"
          placeholder="Image URL"
          class="w-full pl-12 pr-4 py-4 rounded-xl
                 bg-black/30 border border-white/10
                 outline-none focus:border-yellow-400
                 text-sm tracking-wide
                 placeholder:text-zinc-500 transition"
        >
      </div>

      <!-- Hidden ID -->
      <input type="hidden" name="id" value="<%= userId %>">

      <!-- Submit -->
      <button
        type="submit"
        class="w-full mt-4 py-4 rounded-xl
               font-semibold tracking-wide
               bg-gradient-to-r from-yellow-400 to-orange-500
               text-black
               shadow-[0_10px_30px_rgba(234,179,8,0.45)]
               hover:scale-[1.03]
               active:scale-95
               transition-all duration-300">
        Update User
      </button>

    </form>

  </div>

  <script>
    lucide.createIcons();
  </script>

</body>
</html>
